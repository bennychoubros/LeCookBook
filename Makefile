#---------------------------------| RESUME |-----------------------------------#
CB	= CookBook.pdf 
#------------------------------------------------------------------------------#

#-------------------------------| COMPILATION |--------------------------------#
CC	= pdflatex
#------------------------------------------------------------------------------#

#------------------------------| SOURCE FILES |--------------------------------#
SRCS	= $(shell ls -1 recettes)
#------------------------------------------------------------------------------#

#-------------------------------| OBJ FILES |----------------------------------#
OBJS	= 
#------------------------------------------------------------------------------#


.PHONY	:	$(SRCS) all clean fclean re

#----------------------------------| RULES |-----------------------------------#
all: $(CB)

$(CB): $(SRCS)
	$(CC) -jobname=$(subst .pdf,,$@) cookbook.tex

clean:
	rm -f *.aux *.log *.out *.toc

fclean: clean
	rm -f $(CV)

re: fclean all
#------------------------------------------------------------------------------#
